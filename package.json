{
  "name": "pure-listen",
  "version": "0.0.1",
  "description": "just music",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "concurrently \"webpack --watch\" \"webpack --watch --config webpack.electron.config.js\" \"wait-on ./dist/main.js &&  electron ./dist/main.js\" ",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taotao7/pure-listen.git"
  },
  "keywords": [
    "listen",
    "music"
  ],
  "author": "tao7",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/taotao7/pure-listen/issues"
  },
  "homepage": "https://github.com/taotao7/pure-listen#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^5.3.0",
    "electron": "11.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "source-map-loader": "^2.0.0",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/images/64x64.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "pure_listen"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": []
    }
  }
}
